<div class="container">
  <h1>Add a review for <%= @restaurant.name%></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.submit "Add review", class: "btn btn-primary" %>
      <% if @review.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>
  <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-secondary" %>
</div>
