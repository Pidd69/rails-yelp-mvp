<div class="container">
  <h1>Add new Restaurant</h1>
  <p>Add your favourit restaurant here</p>

  <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: ['chinese', 'italian', 'japanese','french', 'belgian'] %>
      <%= f.submit "Add restaurant", class: "btn btn-primary" %>
      <% if @restaurant.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>
  <%= link_to 'Cancel', restaurants_path, class: "btn btn-secondary"%>
</div>
