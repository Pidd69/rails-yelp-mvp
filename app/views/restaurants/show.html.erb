<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.category.capitalize %> | Phone: <%= @restaurant.phone_number %> </p>

  <h2>Customer reviews</h2>
  <% @restaurant.reviews.each do |review| %>
  <ul>
    <li class ='text-uppercase'><%= review.content %> | Rating: <%= '*'*review.rating %> </li>
  </ul>
  <% end %>
  <%= link_to 'Back to all restaurants', restaurants_path, class: "btn btn-secondary"%>
 <br><br>


  <h3>Add a review</h3>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.submit "Add review", class: "btn btn-primary" %>
      <% if @review.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  <% end %>

</div>
