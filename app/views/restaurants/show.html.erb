<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.category.capitalize %> | Phone: <%= @restaurant.phone_number %> </p>

  <h2>Customer reviews</h2>
  <% @restaurant.reviews.each do |review| %>
  <ul>
    <li class ='text-uppercase'><%= review.content %> | Rating: <%= '*'*review.rating %> </li>
  </ul>
  <% end %>
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to 'Back to all restaurants', restaurants_path, class: "btn btn-secondary"%>

</div>
